          <view class='rules'></view>
          <view class='block-item2'><input type="text" placeholder='请填写电话' id="PhoneNo" name='PhoneNo'></input>
          </view>
        </view>
        <view class='list-block'>
          <view class='block-item'>地址</view>
          <view class='rules'></view>
          <view class='block-item2'><input type="text" placeholder='请填写地址' id="Address" name='Address'></input></view>
