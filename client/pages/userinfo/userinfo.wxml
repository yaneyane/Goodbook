  <form bindsubmit='recipient'>
  <view class='list-title'>
        <view>填写个人信息</view>
  </view>
      <view class='list-page'>
        <view class='list-block'>
          <view class='block-item'>姓名</view>
          <view class='rules'></view>
          <view class='block-item2'><input type="text" placeholder='请填写姓名' id="UserName" name='UserName'></input></view>
        </view>
        <view class='list-block'>
