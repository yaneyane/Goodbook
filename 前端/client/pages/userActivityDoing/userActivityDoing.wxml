<view class='title'>正在进行</view>
  <view class='content' style="height: 70px;flex-direction:row;" wx:for="{{userActivitydoing}}" wx:for-index="index" wx:for-item="item">
    <view style='width:50px;'>
      <text class='con_num' style="height: 80px; flex-direction:row;">{{index+1}}</text>
    </view>
    <view class="part">
      <text class='con_big'>{{item.ActivityName}}</text>
      <text class='con_big'>{{item.StartTime}}-{{item.EndTime}}</text>
    </view>
    <view style="width: 200px;flex-direction:row;">
        <button class='button' bindtap="paticipate" data-index="{{index}}">参加</button>
        <button class='button' open-type="share" data-index="{{index}}">分享</button>
    </view>
  </view>
<view class="section btn-area">
  <button class='btn_foot' form-type="submit"bindtap='ret'>返回</button>  
</view>